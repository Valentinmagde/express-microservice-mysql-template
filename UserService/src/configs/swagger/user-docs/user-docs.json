{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "User service documentation",
      "summary": "User service documentation",
      "baseUrl": "/v1/users",
      "version": "1.0.0",
      "description":
        "This is the documentation of the user microservice that gathers all the user-specific functionalities realized with Express and documented with Swagger.",
      "termsOfService": "#",
      "license": {
        "name": "Apache 2.0",
        "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
      },
      "contact": {
        "name": "Contact the Developper",
        "url": "#",
        "email": "valentinmagde@gmail.com"
      }
    },
    "basePath": "/v1/docs",
    "externalDocs": {
      "description": "Find more info here",
      "url": "#"
    },
    "servers": [
      {
        "url": "http://localhost:1000",
        "description": "Development server",
        "//variables": {
          "username": {
            "default": "demo",
            "description": "this value is assigned by the service provider, in this example `gigantic-server.com`"
          },
          "port": {
            "enum": [
              "8443",
              "443"
            ],
            "default": "8443"
          },
          "basePath": {
            "default": "v2"
          }
        }
      }
    ],
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  },
  "apis": [
    "./src/routes/*/*.ts",
    "./src/modules/*/*.ts",
    "./src/configs/swagger/user-docs/components/*.yaml",
    "./src/configs/swagger/user-docs/responses/*.yaml"
  ]
}